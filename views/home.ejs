<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomePage</title>
    <!-- Include Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #212529; /* Dark background */
            color: #f8f9fa; /* Light text color for contrast */
            font-family: 'Arial', sans-serif;
            transition: background-color 0.3s ease-in-out;
        }

        .container {
            margin-top: 2rem;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: 700;
        }

        .card {
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out, background-color 0.2s ease;
            border-radius: 10px;
            background-color: #343a40; /* Dark card background */
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            background-color: #495057; /* Slight hover effect with color change */
        }

        .card-img-top {
            height: 180px; /* Ensure uniform image size */
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card-body {
            padding: 1.5rem;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #f8f9fa;
        }

        .card-text {
            color: #adb5bd; /* Light grey color for text */
            font-size: 1rem;
        }

        .btn {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

        .row {
            margin-top: 2rem;
        }

        .text-center {
            color: #f8f9fa;
        }

        /* Add media query for responsiveness */
        @media (max-width: 768px) {
            .card-img-top {
                height: 150px;
            }

            h1 {
                font-size: 2rem;
            }
        }

    </style>
</head>
<body>
    <%- include('partials/nav') %>
            <h1 class="text-center mb-4 card-title ">Welcome, <%= user ? user.fullname : "Guest" %>!</h1>

    <div class="container">
        <div class="row gy-4">
            <% blogs.forEach(blog => { %>
            <div class="col-md-4 col-lg-3">
                <div class="card h-100">
                    <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Image">
                    <div class="card-body">
                        <h5 class="card-title"><%= blog.title %></h5>
                        <p class="card-text text-truncate" style="max-width: 100%;"><%= blog.body %></p>
                        <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    <script src="/partials/scripts.js"></script>
    <!-- Include Bootstrap 5 JavaScript Bundle (includes Popper.js) -->
</body>
</html>
